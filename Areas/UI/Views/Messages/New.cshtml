@model EcommerceApp.Models.ViewModels.MyMessagesViewModel

@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-hero">
    <div class="section-center">
        <h3 class="page-hero-title">Home / Contact</h3>
    </div>
</section>
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center mt-5">
                <h2 class="text-uppercase title-text">HAVE ANY QUESTIONS? I WOULD LIKE TO HEAR FROM YOU, PLEASE FILL IN THE CONTACT FORM</h2>
                <hr class="star-primary">
            </div>
        </div>
        
        <div class="row">
            <div class="container contact-form">
                <div class="contact-image">
                    <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact" />
                </div>
                <form asp-controller="MyMessages" asp-action="Create" method="post" id="messageForm" autocomplete="off">
                    <h3 class="text-uppercase">Drop Us a Message</h3>
                    <div class="row">
                        <div class="col-md-12">
                            <input asp-for="MyMessage.Id" type="hidden" />
                            <div class="form-group">
                                <label>Name</label>
                                <input class="form-control" asp-for="MyMessage.Name" />
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input class="form-control" asp-for="MyMessage.Email" />
                            </div>
                            <div class="form-group">
                                <label>Message</label>
                                <textarea class="form-control" asp-for="MyMessage.Message" style="width: 100%; height: 150px;">
                         </textarea>
                            </div>
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btnContact">Send Message</button>
                        </div>
                    </div>
                    
                </form>
            </div><!--col-lg-12-->
        </div><!--row-->
    </div><!--container-->
</section>
@section scripts {
    <script src="~/js/mymessage.js"></script>
}