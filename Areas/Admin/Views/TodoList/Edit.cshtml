@model EcommerceApp.Models.TodoList
﻿﻿
@{
    var title = "New TodoList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="wrapper">
    <partial name="_AdminSideNavbar" />
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <!-- Topbar -->
            <!-- Topbar -->
            <partial name="_AdminTopBar" />
            <!-- End of Topbar -->
            <!-- End of Main Content -->
            <div class="container-fluid">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="IsVisible" class="control-label"></label>
                        <input asp-for="IsVisible" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
</div>

