﻿﻿@{
    var title = "New TodoList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="wrapper">
    <partial name="_AdminSideNavbar" />
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <!-- Topbar -->
            <!-- Topbar -->
            <partial name="_AdminTopBar" />
            <!-- End of Topbar -->
            <!-- End of Main Content -->
            <div class="container-fluid">
                <div class="text-center mt-3">
                    <h2>@title</h2>
                    <hr />
                </div>
                <div class="table-responsive p-2">
                    <table id="tblTodos" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Completes</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
</div>

@section scripts {
    <script src="~/js/todolist.js"></script>
}