@model Category


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>New category</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <form method="post">
                <div class="border p-3 mt-4">
                    <div class="row pb-2">
                        <h2 class="text-primary">Create category</h2>
                        <hr />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DiplayOrder"></label>
                        <input asp-for="DiplayOrder" class="form-control" />
                        <span asp-validation-for="DiplayOrder" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
                    <a asp-controller="Category" asp-action="Index" class="btn btnalert-secondary" style="width:150px">
                        Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}